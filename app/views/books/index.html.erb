
<h1>Books</h1>



<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><a href="/books/<%= book.id %>">show</a></td>
     <td><a href="/books/<%= book.id %>/edit">edit</a></td>
     <td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>

  </tbody>
</table>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <p>error</p>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model:@book, local:true do |f| %>
<div class=field>
 <label>Title</label>
 <%= f.text_field :title %>
</div>
<div class=field>
 <label>Body</label>
 <%= f.text_area :body %>
</div>
<div>
 <%= f.submit 'Create Book' %>
 </div>
<% end %>
