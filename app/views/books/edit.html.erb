
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <p>error</p>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model:@book, local: true do |f| %>
<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div class=field>
<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
<div class=field>
  <%= f.submit 'Update Book' %>
<div class=actions>
<% end %>
<a href="/books/<%= @book.id %>">show</a>
<text>|</text>
